<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_album_art"
        android:src="@drawable/ic_launcher"
        android:layout_width="@dimen/playback_controler_albumart_size"
        android:layout_height="@dimen/playback_controler_albumart_size"
        android:scaleType="centerCrop"
        android:padding="@dimen/margin_small"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_margin"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv_album_art"
        android:layout_toStartOf="@+id/ib_play_next"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/tv_title"
            tools:text="The Best Music EVAH1111 THE BEST"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?android:attr/textColorPrimary"
            />
        <TextView
            android:id="@+id/tv_artist"
            tools:text="John Doe and Band"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <!--<TextView-->
            <!--android:id="@+id/extra_info"-->
            <!--tools:text="casting to MyCast"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="1"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:visibility="gone"-->
            <!--android:textAppearance="?android:attr/textAppearanceSmall"/>-->
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_play_next"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_margin"
        android:layout_toStartOf="@+id/ib_play_pause"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_skip_next_black_36dp"
        />

    <ImageButton
        android:id="@+id/ib_play_pause"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_margin"
        android:layout_toStartOf="@+id/ib_list"
        android:background="?selectableItemBackgroundBorderless"
        tools:src="@drawable/ic_play_arrow_black_36dp"
        />
    <ImageButton
        android:id="@+id/ib_list"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base_margin"
        android:paddingEnd="@dimen/margin_small"
        android:paddingBottom="@dimen/base_margin"
        android:layout_alignParentEnd="true"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_playlist_play_black_36dp"
        />
</RelativeLayout>